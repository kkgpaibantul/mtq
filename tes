    <script>
        // Sheet configuration
        const SHEET_CONFIG = {
            'mtq': {
                title: 'MTQ - Tilawatil Qur\'an',
                url: 'https://docs.google.com/spreadsheets/d/1zKSaSIzsil7yaWH6rle4tsJWlzo9lEuTui70lr5mxnY/edit#gid=1995802078',
                icon: 'fas fa-book-quran'
            },
            'mttq': {
                title: 'MTtQ - Tartil Qur\'an', 
                url: 'https://docs.google.com/spreadsheets/d/1zKSaSIzsil7yaWH6rle4tsJWlzo9lEuTui70lr5mxnY/edit#gid=773675545',
                icon: 'fas fa-music'
            },
            'mhq': {
                title: 'MHQ - Hifdzil Qur\'an',
                url: 'https://docs.google.com/spreadsheets/d/1zKSaSIzsil7yaWH6rle4tsJWlzo9lEuTui70lr5mxnY/edit#gid=1871770951',
                icon: 'fas fa-brain'
            },
            'adzan': {
                title: 'MAz - Musabaqah Adzan',
                url: 'https://docs.google.com/spreadsheets/d/1zKSaSIzsil7yaWH6rle4tsJWlzo9lEuTui70lr5mxnY/edit#gid=1679419554',
                icon: 'fas fa-mosque'
            },
            'pidato': {
                title: 'Lomba Pidato PAI',
                url: 'https://docs.google.com/spreadsheets/d/1zKSaSIzsil7yaWH6rle4tsJWlzo9lEuTui70lr5mxnY/edit#gid=60621255',
                icon: 'fas fa-microphone'
            }
        };

        let currentTab = 'mtq';

        // Check authentication
        function checkAuth() {
            const isLoggedIn = localStorage.getItem('mtq_admin_logged_in');
            const user = localStorage.getItem('mtq_admin_user');
            const loginTime = localStorage.getItem('mtq_login_time');
            
            if (isLoggedIn !== 'true' || !user) {
                window.location.href = 'login.html';
                return;
            }

            // Update user info
            document.getElementById('user-role').textContent = user.charAt(0).toUpperCase() + user.slice(1);
            document.getElementById('display-user').textContent = user.charAt(0).toUpperCase() + user.slice(1);
            
            if (loginTime) {
                const loginDate = new Date(loginTime);
                document.getElementById('login-time').textContent = loginDate.toLocaleString('id-ID');
            }
        }

        // Switch tabs
        function switchTab(tabId) {
            // Update tab buttons
            document.querySelectorAll('.tab-btn').forEach(btn => {
                btn.classList.remove('active');
            });
            document.querySelector(`[data-tab="${tabId}"]`).classList.add('active');
            
            // Update iframe
            const config = SHEET_CONFIG[tabId];
            if (config) {
                document.getElementById('current-sheet-title').textContent = config.title;
                document.getElementById('sheetFrame').src = config.url;
                currentTab = tabId;
            }
        }

        // Refresh iframe
        function refreshIframe() {
            const iframe = document.getElementById('sheetFrame');
            iframe.src = iframe.src;
        }

        // Open in new tab
        function openInNewTab() {
            const config = SHEET_CONFIG[currentTab];
            if (config) {
                window.open(config.url, '_blank');
            }
        }

        // Logout function
        function logout() {
            localStorage.removeItem('mtq_admin_logged_in');
            localStorage.removeItem('mtq_admin_user');
            localStorage.removeItem('mtq_login_time');
            window.location.href = 'login.html';
        }

        // Event Listeners
        document.addEventListener('DOMContentLoaded', function() {
            checkAuth();
            
            // Tab switching
            document.querySelectorAll('.tab-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    switchTab(this.dataset.tab);
                });
            });
            
            // Action buttons
            document.getElementById('refreshBtn').addEventListener('click', refreshIframe);
            document.getElementById('openNewTabBtn').addEventListener('click', openInNewTab);
            document.getElementById('logoutBtn').addEventListener('click', logout);

            // Initialize first tab
            switchTab('mtq');
        });

        // Auto logout after 12 hours for security
        setInterval(() => {
            const loginTime = localStorage.getItem('mtq_login_time');
            if (loginTime) {
                const loginDate = new Date(loginTime);
                const now = new Date();
                const hoursDiff = (now - loginDate) / (1000 * 60 * 60);
                
                if (hoursDiff > 12) {
                    alert('Sesi telah berakhir. Silakan login kembali.');
                    logout();
                }
            }
        }, 60000); // Check every minute
    </script>
</body>
</html>
